<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPage1"
    tools:ignore="ExtraText">

    // Background
    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0A408F"
        android:elevation="0dp"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="172dp" />

    // Username display text (Change this to display the username)
    <TextView
        android:id="@+id/displayUsername"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#0A408F"
        android:elevation="9dp"
        android:gravity="center"
        android:text="@string/welcome_user"
        android:textColor="@color/black"
        android:textSize="35sp"
        tools:ignore="MissingConstraints" />

    /*
    Check engine light button that when
    clicked takes to check engine light page
    */
    <ImageButton
        android:id="@+id/checkEngineLightButton"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:backgroundTint="#F6D02D"
        android:contentDescription="@string/sends_to_screen_of_info"
        android:elevation="10dp"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/cel1"
        android:onClick="CEL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/displayUsername"
        tools:ignore="RtlSymmetry"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="213dp" />

    /*
    Low oil pressure light button that when
    clicked takes to low oil pressure light page
    */
    <ImageButton
        android:id="@+id/lowOilPressureLightButton"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginTop="35dp"
        android:backgroundTint="#F62D2D"
        android:contentDescription="@string/oil_pressure_info"
        android:elevation="10dp"
        android:padding="18dp"
        android:scaleType="fitCenter"
        android:src="@drawable/op1"
        android:onClick="LOP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkEngineLightButton"
        tools:ignore="ContentDescription,RtlSymmetry" />

    /*
    ABS light button that when
    clicked takes to ABS light page
    */
    <ImageButton
        android:id="@+id/absButton"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#F6D02D"
        android:contentDescription="@string/abs_info"
        android:elevation="10dp"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/abs1"
        android:onClick="ABS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lowOilPressureLightButton"
        tools:ignore="ContentDescription,RtlSymmetry" />

    // Button that allows user to go to the next page of lights
    <Button
        android:id="@+id/page2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:text="Continue"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/absButton"
        tools:ignore="HardcodedText" />


</androidx.constraintlayout.widget.ConstraintLayout>