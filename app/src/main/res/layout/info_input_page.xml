<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText">


    <TextView
        android:id="@+id/enterInfoMessage"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#0A408F"
        android:elevation="10dp"
        android:gravity="center"
        android:text="@string/enter_the_following_info_about_your_vehicle1"
        android:textColor="@color/black"
        android:textSize="35sp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/vinTextView"
        android:layout_width="375dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:background="@color/black"
        android:elevation="10dp"
        android:gravity="center"
        android:text="@string/vin_number1"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/enterInfoMessage" />

    <EditText
        android:id="@+id/vinInput"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:autofillHints="Check your dashboard and insurance card."
        android:background="@color/white"
        android:elevation="11dp"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="191dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vinTextView"
        />

    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0A408F"
        android:elevation="0dp"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>