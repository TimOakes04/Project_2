<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ExtraText">


<!--    // Enter the following message display text-->
    <TextView
        android:id="@+id/enterInfoMessage"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#0A408F"
        android:elevation="10dp"
        android:gravity="center"
        android:text="@string/enter_the_following_info_about_your_vehicle"
        android:textColor="@color/black"
        android:textSize="35sp"
        tools:ignore="MissingConstraints" />

<!--    // VIN number display text-->
    <TextView
        android:id="@+id/vinTextView"
        android:layout_width="375dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:background="@color/black"
        android:elevation="10dp"
        android:gravity="center"
        android:paddingBottom="37dp"
        android:text="@string/vin_number"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/enterInfoMessage"
        app:layout_constraintVertical_bias="0.5" />

<!--    // VIN number input-->
    <EditText
        android:id="@+id/vinInput"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:autofillHints="Check your dashboard and insurance card."
        android:background="@color/white"
        android:elevation="11dp"
        android:gravity="center"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/vinTextView"
        tools:ignore="LabelFor" />

<!--    // Make display text-->
    <TextView
        android:id="@+id/makeTextView"
        android:layout_width="375dp"
        android:layout_height="80dp"
        android:layout_marginTop="132dp"
        android:background="@color/black"
        android:elevation="10dp"
        android:gravity="center"
        android:paddingBottom="37dp"
        android:text="@string/make"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/enterInfoMessage" />

<!--    // Make input-->
    <EditText
        android:id="@+id/makeInput"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="140dp"
        android:autofillHints="Check your vehicle manual"
        android:background="@color/white"
        android:elevation="11dp"
        android:gravity="center"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/vinTextView"
        tools:ignore="LabelFor" />

<!--    // Model display text-->
    <TextView
        android:id="@+id/modelTextView"
        android:layout_width="375dp"
        android:layout_height="80dp"
        android:layout_marginTop="244dp"
        android:background="@color/black"
        android:elevation="10dp"
        android:gravity="center"
        android:paddingBottom="37dp"
        android:text="@string/model"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/enterInfoMessage" />


<!--    // Model input-->
    <EditText
        android:id="@+id/modelInput"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="252dp"
        android:autofillHints="Check your vehicle manual"
        android:background="@color/white"
        android:elevation="11dp"
        android:gravity="center"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/vinTextView"
        tools:ignore="LabelFor" />

<!--    // Year display text-->
    <TextView
        android:id="@+id/yearTextView"
        android:layout_width="375dp"
        android:layout_height="80dp"
        android:layout_marginTop="356dp"
        android:background="@color/black"
        android:elevation="10dp"
        android:gravity="center"
        android:paddingBottom="37dp"
        android:text="@string/year"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/enterInfoMessage" />

<!--    // Year input-->
    <EditText
        android:id="@+id/yearInput"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="364dp"
        android:autofillHints="Check your vehicle manual"
        android:background="@color/white"
        android:elevation="11dp"
        android:gravity="center"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/vinTextView"
        tools:ignore="LabelFor" />

<!--    // Pin display text-->
    <TextView
        android:id="@+id/pinTextView"
        android:layout_width="375dp"
        android:layout_height="130dp"
        android:layout_marginTop="464dp"
        android:background="@color/black"
        android:elevation="10dp"
        android:gravity="center"
        android:paddingBottom="37dp"
        android:text="@string/pin"
        android:textColor="@color/white"
        android:textSize="29sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/enterInfoMessage" />

<!--    // Pin input-->
    <EditText
        android:id="@+id/pinInput"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="520dp"
        android:autofillHints="Check your vehicle manual"
        android:background="@color/white"
        android:elevation="11dp"
        android:gravity="center"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/vinTextView"
        tools:ignore="LabelFor" />

<!--    // Background-->
    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0A408F"
        android:elevation="0dp"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="0dp" />

<!--    // Button to continue to activity main page 1-->
    <Button
        android:id="@+id/confirm_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/white"
        android:text="@string/continueButton"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pinInput"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>